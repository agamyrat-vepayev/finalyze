<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Expense Details - <%= category || "All" %></title>
    <script src="/js/tailwind.js"></script>
  </head>

  <body class="bg-gray-50 font-sans py-10">
    <div class="max-w-6xl mx-auto bg-white shadow-md rounded-xl p-6">
      <!-- Header -->
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-semibold text-gray-800">
          Expense Details - <%= category || "All" %>
        </h2>
        <a href="/construction/income/totals" class="text-blue-600 underline">
          ‚Üê Back to Totals
        </a>
      </div>

      <!-- Table -->
      <div class="overflow-x-auto rounded-lg border border-gray-300">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-2 text-left text-gray-700 font-medium">
                Name
              </th>
              <th class="px-4 py-2 text-left text-gray-700 font-medium">
                Date
              </th>
              <th class="px-4 py-2 text-left text-gray-700 font-medium">
                Type
              </th>
              <th class="px-4 py-2 text-left text-gray-700 font-medium">
                Line Explanation
              </th>
              <th class="px-4 py-2 text-right text-gray-700 font-medium">
                TMT
              </th>
              <th class="px-4 py-2 text-right text-gray-700 font-medium">
                USD
              </th>
            </tr>
          </thead>

          <tbody class="divide-y divide-gray-200 bg-white">
            <% if (expenseDetails.length > 0) { %> <%
            expenseDetails.forEach(item => { %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-2"><%= item.NAME %></td>
              <td class="px-4 py-2">
                <%= new
                Date(item.DATE_).toLocaleDateString('en-GB').replace(/\//g, '.')
                %>
              </td>
              <td class="px-4 py-2"><%= item.TYPE_ %></td>
              <td class="px-4 py-2"><%= item.LINEEXP %></td>
              <td class="px-4 py-2 text-right">
                <%= item.LINENET.toLocaleString('en-US', {
                maximumFractionDigits: 2 }) %>
              </td>
              <td class="px-4 py-2 text-right">
                <%= item.REPORTNET.toLocaleString('en-US', {
                maximumFractionDigits: 2 }) %>
              </td>
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td colspan="6" class="px-4 py-4 text-center text-gray-500">
                No data available
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div
        class="mt-6 flex flex-col sm:flex-row sm:items-center sm:justify-between"
      >
        <div class="text-gray-600 mb-2 sm:mb-0">
          Showing <%= totalItems > 0 ? (currentPage - 1) * pageSize + 1 : 0 %>
          to <%= Math.min(currentPage * pageSize, totalItems) %> of <%=
          totalItems %> items
        </div>

        <div class="flex space-x-1">
          <!-- Prev -->
          <% if (currentPage > 1) { %>
          <a
            href="?category=<%= encodeURIComponent(category) %>&clientCode=<%= encodeURIComponent(clientCode) %>&page=<%= currentPage - 1 %>"
            class="px-3 py-1 border rounded-md bg-white text-blue-500 hover:bg-blue-50"
            >Prev</a
          >
          <% } else { %>
          <span
            class="px-3 py-1 border rounded-md bg-gray-200 text-gray-400 cursor-not-allowed"
            >Prev</span
          >
          <% } %>

          <!-- Page numbers -->
          <% let startPage = Math.max(1, currentPage - 2); %> <% let endPage =
          Math.min(totalPages, currentPage + 2); %> <% for (let i = startPage; i
          <= endPage; i++) { %>
          <a
            href="?category=<%= encodeURIComponent(category) %>&clientCode=<%= encodeURIComponent(clientCode) %>&page=<%= i %>"
            class="px-3 py-1 border rounded-md <%= i === currentPage ? 'bg-blue-500 text-white' : 'bg-white text-blue-500 hover:bg-blue-50' %>"
          >
            <%= i %>
          </a>
          <% } %>

          <!-- Next -->
          <% if (currentPage < totalPages) { %>
          <a
            href="?category=<%= encodeURIComponent(category) %>&clientCode=<%= encodeURIComponent(clientCode) %>&page=<%= currentPage + 1 %>"
            class="px-3 py-1 border rounded-md bg-white text-blue-500 hover:bg-blue-50"
            >Next</a
          >
          <% } else { %>
          <span
            class="px-3 py-1 border rounded-md bg-gray-200 text-gray-400 cursor-not-allowed"
            >Next</span
          >
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
